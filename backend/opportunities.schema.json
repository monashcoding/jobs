{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"company": {"$ref": "#/definitions/nonEmptyString"},
			"name": {"$ref": "#/definitions/nonEmptyString"},
			"type": {
				"enum": ["Internship", "Grad Program", "Other Program"]
			},
			"courseProgressions": {
				"type": "array",
				"items": {
					"enum": ["Pre-Penultimate", "Penultimate", "Grad"]
				}
			},
			"open": {"type": "boolean"},
			"roles": {
				"type": "array",
				"items": {
					"enum": [
						"Analytics and Cognitive",
						"Artificial Intelligence Engineer",
						"Automation Engineer",
						"Backend Engineer",
						"Business Analyst",
						"Business Engineer",
						"Cloud Engineer",
						"Customer Experience",
						"Cyber Security Advisor",
						"Data Analyst",
						"Data Engineer",
						"Data Manager",
						"Data Scientist",
						"Data Visualisation Engineer",
						"DevOps Engineer",
						"Digital Strategist",
						"Equity Analyst",
						"Financial Crimes Analyst",
						"Forensics Technology",
						"Frontend Engineer",
						"Game Developer",
						"Hardware Engineer",
						"Information Technology",
						"Infrastructure Engineer",
						"IT Operations Engineer",
						"Linux Engineer",
						"Machine Learning Engineer",
						"Mobile App Developer",
						"Network Engineer",
						"Penetration Tester",
						"Platforms Engineer",
						"Product Designer",
						"Product Engineer",
						"Product Manager",
						"Project Analyst",
						"Project Manager",
						"Production Engineer",
						"Quantitative Researcher",
						"Sales",
						"Security Engineer",
						"Site Reliability Engineer",
						"Solutions Consultant",
						"Software Engineer",
						"Systems Engineer",
						"Technical Analyst",
						"Technology Advisory",
						"Technology Audit",
						"Technology Consultant",
						"Technology Risk",
						"Technical Specialist",
						"Technical Support",
						"Trader",
						"Trading Desk Operations Engineer",
						"UX/UI Designer",
						"Workspace Technology"
					]
				}
			},
			"locations": {
				"type": "array",
				"items": {
					"enum": [
						"Adelaide",
						"Amberley, QLD",
						"APAC",
						"Australia",
						"Brisbane",
						"Canberra",
						"Ingleburn, NSW",
						"Karratha, WA",
						"Hobart",
						"Hong Kong",
						"Melbourne",
						"Newcastle, NSW",
						"New South Wales",
						"Nowra, NSW",
						"Perth",
						"Remote",
						"Shanghai",
						"Sydney",
						"Western Australia",
						"Williamtown, NSW"
					]
				}
			},
			"duration": {"$ref": "#/definitions/nonEmptyString"},
			"time": {"$ref": "#/definitions/nonEmptyString"},
			"openMonth": {"$ref": "#/definitions/month"},
			"closeMonth": {"$ref": "#/definitions/month"},
			"industries": {
				"type": "array",
				"items": {"$ref": "#/definitions/nonEmptyString"}
			},
			"workingRights": {
				"type": "array",
				"items": {
					"enum": [
						"Australian Citizen",
						"New Zealand Citizen",
						"Australian Permanent Resident",
						"Full Working Rights",
						"International",
						"Subclass 462",
						"Australian Temporary Work Visa",
						"New Zealand Permanent Resident",
						"Australian Student Visa"
					]
				}
			},
			"url": {
				"type": "string",
				"format": "uri",
				"pattern": "^https://"
			},
			"description": {"$ref": "#/definitions/nonEmptyString"},
			"notes": {"$ref": "#/definitions/nonEmptyString"}
		},
		"required": ["company", "name", "type", "open", "roles", "locations"]
	},

	"definitions": {
		"nonEmptyString": {
			"type": "string",
			"minLength": 1
		},
		"month": {
			"type": "number",
			"minimum": 1,
			"maximum": 12
		}
	}
}
